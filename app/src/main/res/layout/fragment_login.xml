<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".login.LoginFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_login_logo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_login_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="16sp"
        android:textColor="@color/blue_splash"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_login_logo"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_login_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_splash"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_login_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_login_id"
        app:layout_constraintTop_toTopOf="@+id/textview_login_id" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PW"
        android:textSize="15sp"
        android:textColor="@color/blue_splash"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/textview_login_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/blue_splash"
        app:layout_constraintBottom_toBottomOf="@+id/textview_login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_login_password"
        app:layout_constraintTop_toTopOf="@+id/textview_login_password" />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>